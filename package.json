{
  "private": true,
  "name": "conner.is",
  "version": "1.0.0",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -i ./app/styles/base.css --minify -o ./app/tailwind.css",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -i ./app/styles/base.css -o ./app/tailwind.css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "BROWSER=none wrangler pages dev ./public -b $(cat .env)",
    "format": "prettier --check --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "postinstall": "remix setup cloudflare-pages",
    "start": "npm run dev:wrangler"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.1.3",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@tsconfig/remix": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.21",
    "invariant": "^2.2.4",
    "node-fetch": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-load-config": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "remix-utils": "^2.5.0",
    "tailwindcss": "^3.0.21"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@remix-run/eslint-config": "^1.1.3",
    "@types/invariant": "^2.2.35",
    "@types/node": "^17.0.17",
    "@types/node-fetch": "^3.0.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.5",
    "wrangler": "^0.0.16"
  },
  "engines": {
    "node": ">=16"
  },
  "main": "dist/worker.js",
  "sideEffects": false,
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "standard-with-typescript",
      "prettier",
      "@remix-run/eslint-config"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "tailwindcss": {}
    }
  }
}
