{
  "private": true,
  "name": "conner.is",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -i ./app/style.css --minify -o ./app/styles.css",
    "build:remix": "remix build",
    "dev": "yarn build && run-p dev:*",
    "dev:css": "tailwindcss -i ./app/style.css -o ./app/styles.css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ./public --compatibility-date=2022-12-01",
    "format": "prettier --check --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.8.2",
    "@remix-run/cloudflare-pages": "^1.8.2",
    "@remix-run/react": "^1.8.2",
    "@tsconfig/remix": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@remix-run/dev": "^1.8.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "wrangler": "^2.6.2"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": ">=1"
  }
}
