{
  "private": true,
  "name": "connerdavis.xyz",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -i ./app/style.css --minify -o ./app/styles.css",
    "build:remix": "remix build",
    "dev": "npm run build && run-p dev:*",
    "dev:css": "tailwindcss -i ./app/style.css -o ./app/styles.css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ./public --compatibility-date=2022-12-01",
    "format": "prettier --check --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.12.0",
    "@remix-run/cloudflare-pages": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@tsconfig/remix": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230115.0",
    "@remix-run/dev": "^1.12.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.5",
    "wrangler": "^2.9.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=16",
    "npm": ">=9"
  }
}
